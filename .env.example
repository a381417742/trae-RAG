# RAG知识库问答系统 - 环境变量配置示例
# 复制此文件为 .env 并根据实际环境修改配置值

# ===========================================
# 应用基础配置
# ===========================================
APP_NAME=RAG知识库问答系统
APP_VERSION=2.0.0
DEBUG=false

# 服务配置
HOST=0.0.0.0
PORT=8000
WORKERS=1

# ===========================================
# Ollama模型服务配置
# ===========================================
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=qwen2.5:7b-instruct
OLLAMA_TIMEOUT=300

# ===========================================
# 向量数据库配置 (Chroma)
# ===========================================
CHROMA_HOST=chroma
CHROMA_PORT=8000
CHROMA_COLLECTION=rag_documents

# ===========================================
# 嵌入模型配置
# ===========================================
EMBEDDING_MODEL=BAAI/bge-large-zh-v1.5
EMBEDDING_DEVICE=cuda

# ===========================================
# Redis缓存配置
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# ===========================================
# 文档处理配置
# ===========================================
MAX_FILE_SIZE=52428800
SUPPORTED_FORMATS=["pdf","txt","md","docx"]
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# ===========================================
# RAG检索配置
# ===========================================
RETRIEVAL_K=5
SIMILARITY_THRESHOLD=0.7

# ===========================================
# 生成配置
# ===========================================
MAX_TOKENS=2000
TEMPERATURE=0.7

# ===========================================
# 监控配置
# ===========================================
ENABLE_METRICS=true
METRICS_PORT=8001

# ===========================================
# 日志配置
# ===========================================
LOG_LEVEL=INFO
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"

# ===========================================
# 安全配置
# ===========================================
API_KEY=your_api_key_here
CORS_ORIGINS=["*"]

# ===========================================
# 开发环境特殊配置
# ===========================================
# 如果在开发环境中，可以使用localhost替代容器名
# OLLAMA_BASE_URL=http://localhost:11434
# CHROMA_HOST=localhost
# REDIS_HOST=localhost